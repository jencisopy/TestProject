<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar xmlns="http://java.sun.com/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/ejb-jar_3_1.xsd" 
         version="3.1">
    <module-name>TestProjects-ejb</module-name>
    <enterprise-beans>
        <session>
            <ejb-name>DBManager</ejb-name>
            <ejb-class>py.com.oym.frame.data.DBManager</ejb-class>
            <session-type>Singleton</session-type>

            <persistence-context-ref>
                <persistence-context-ref-name>persistence/pu1</persistence-context-ref-name>
                <persistence-unit-name>PU1</persistence-unit-name>
            </persistence-context-ref>

            <persistence-context-ref>
                <persistence-context-ref-name>persistence/pu2</persistence-context-ref-name>
                <persistence-unit-name>PU2</persistence-unit-name>
            </persistence-context-ref>
            
            <persistence-context-ref>
                <persistence-context-ref-name>persistence/webresource</persistence-context-ref-name>
                <persistence-unit-name>WEBRESOURCE</persistence-unit-name>
            </persistence-context-ref>
        </session>
        <session>
            <ejb-name>GenericDAO</ejb-name>
            <ejb-class>py.com.oym.frame.data.GenericDAO</ejb-class>                                                
            <business-local>py.com.oym.frame.data.IGenericDAO</business-local>
            <business-remote>py.com.oym.frame.data.IGenericDAORemote</business-remote>
            <session-type>Stateless</session-type>                        
            <transaction-type>Container</transaction-type>                                                
        </session>
        <session>
            <ejb-name>DataService</ejb-name>
            <ejb-class>py.com.oym.frame.services.DataService</ejb-class>                                                
            <business-local>py.com.oym.frame.services.IDataService</business-local>
            <business-remote>py.com.oym.frame.services.IDataServiceRemote</business-remote>
            <session-type>Stateless</session-type>                        
            <transaction-type>Container</transaction-type>                                                
        </session>
        <session>
            <ejb-name>UsuarioSrv</ejb-name>
            <ejb-class>net.makerapp.services.UsuarioSrv</ejb-class>                                                
            <business-local>py.com.oym.frame.services.IDataService</business-local>
            <business-remote>py.com.oym.frame.services.IDataServiceRemote</business-remote>
            <session-type>Stateless</session-type>                        
            <transaction-type>Container</transaction-type>                                                
        </session>
        <session>
            <ejb-name>UsuarioMiembroSrv</ejb-name>
            <ejb-class>net.makerapp.services.UsuarioMiembroSrv</ejb-class>                                                
            <business-local>py.com.oym.frame.services.IDataService</business-local>
            <business-remote>py.com.oym.frame.services.IDataServiceRemote</business-remote>
            <session-type>Stateless</session-type>                        
            <transaction-type>Container</transaction-type>                                                
        </session>
        <session>
            <ejb-name>Sessions</ejb-name>
            <ejb-class>py.com.oym.frame.security.Sessions</ejb-class>
            <session-type>Singleton</session-type>
        </session>
        <session>
            <ejb-name>SecManager</ejb-name>
            <ejb-class>py.com.oym.frame.security.SecManager</ejb-class>                                                
            <business-local>py.com.oym.frame.security.ISecManager</business-local>
            <business-remote>py.com.oym.frame.security.ISecManagerRemote</business-remote>
            <session-type>Stateless</session-type>                        
            <transaction-type>Container</transaction-type>                                                
        </session>                
        <session>
            <ejb-name>LogManager</ejb-name>
            <ejb-class>py.com.oym.frame.log.LogManager</ejb-class>                                                
            <business-local>py.com.oym.frame.log.ILogManager</business-local>
            <business-remote>py.com.oym.frame.log.ILogManagerRemote</business-remote>
            <session-type>Stateless</session-type>                        
            <transaction-type>Container</transaction-type>                                                
        </session>      
        <session>
            <ejb-name>XmlManager</ejb-name>
            <ejb-class>py.com.oym.frame.xml.XmlManager</ejb-class>
            <business-local>py.com.oym.frame.xml.IXmlManager</business-local>
            <business-remote>py.com.oym.frame.xml.IXmlManagerRemote</business-remote>
            <session-type>Singleton</session-type>
        </session>
        <session>        
            <ejb-name>XmlSearcher</ejb-name>
            <ejb-class>py.com.oym.frame.xml.XmlFileObjectSearcher</ejb-class>
            <business-remote>py.com.oym.frame.xml.IXmlSearcher</business-remote>            
            <session-type>Stateless</session-type>                        
            <transaction-type>Container</transaction-type>                                                
        </session>        
    </enterprise-beans>
</ejb-jar>