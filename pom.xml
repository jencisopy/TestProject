<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>py.com.oym</groupId>
    <artifactId>TestProjects</artifactId>
    <version>2.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>TestProjects</name>
    <modules>
        <module>TestProjects-ear</module>
        <module>TestProjects-ejb</module>
        <module>TestProjects-jar</module>
    </modules>
    <properties>
        <endorsed.dir>${project.build.directory}/endorsed</endorsed.dir>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.min.version>3.0.0</maven.min.version>
        <version.junit>4.11</version.junit>
        <version.javaee_api>7.0</version.javaee_api>
        <oym.frame.version>7.0.0-SNAPSHOT</oym.frame.version>
        <javabeanstack.version>2.0.0-SNAPSHOT</javabeanstack.version>
        <maven.compiler.source>11</maven.compiler.source>
        <maven.compiler.target>11</maven.compiler.target>
    </properties>
    <prerequisites>
        <maven>${maven.min.version}</maven>
    </prerequisites>     

    <repositories>
        <repository>
            <id>ossrh-snapshots</id>
            <name>Maven Central Repository Snapshots</name>
            <url>https://oss.sonatype.org/content/repositories/snapshots/</url>
            <layout>default</layout>            
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <releases>
                <enabled>false</enabled>
            </releases>            
        </repository>
        <repository>
            <id>oym-snapshots</id>
            <name>OyM Maven Repository</name>
            <url>http://serverapps.oym.com.py:8081/repository/maven-snapshots/</url>
            <layout>default</layout>            
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <releases>
                <enabled>false</enabled>
            </releases>            
        </repository>
        <repository>
            <id>oym-releases</id>
            <name>OyM Maven Repository</name>
            <url>http://serverapps.oym.com.py:8081/repository/maven-releases/</url>
            <layout>default</layout>                        
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
            <releases>
                <enabled>true</enabled>
            </releases>            
        </repository>
    </repositories>
    
    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.12</version>
            <scope>test</scope>
        </dependency>     
        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-core</artifactId>
            <version>2.25.0</version>         
        </dependency>  
        <dependency>
            <groupId>org.apache.logging.log4j</groupId>
            <artifactId>log4j-api</artifactId>
            <version>2.25.0</version>            
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>Oym-frame-web</artifactId>
            <version>${oym.frame.version}</version>
        </dependency>        
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>Oym-frame-business</artifactId>
            <version>${oym.frame.version}</version>
        </dependency>        
    </dependencies>  
